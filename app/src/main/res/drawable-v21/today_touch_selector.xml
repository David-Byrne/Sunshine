<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <ripple android:color="@color/sunshine_dark_blue" />
    </item>

    <!-- http://stackoverflow.com/questions/30188426/android-ripple-effect-overridden-by-selected-state -->
    <!-- http://stackoverflow.com/questions/30556651/android-ripple-background-color -->

    <item android:state_activated="true"
        android:drawable="@color/sunshine_light_blue"/>

    <item android:state_selected="true"
        android:drawable="@color/sunshine_light_blue"/>

    <item android:drawable="@color/sunshine_blue" />
</selector>